<view class="container"><view class="form-box"><view class="form-item"><input class="username" placeholder="账号" auto-focus="{{true}}" data-event-opts="{{[['input',[['bindUsernameInput',['$event']]]]]}}" value="{{username}}" bindinput="__e"/><block wx:if="{{username.length>0}}"><image class="clear" id="clear-username" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><view class="form-item"><input class="password" password="{{true}}" placeholder="密码" data-event-opts="{{[['input',[['bindPasswordInput',['$event']]]]]}}" value="{{password}}" bindinput="__e"/><block wx:if="{{password.length>0}}"><image class="clear" id="clear-password" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><block wx:if="{{loginErrorCount>=3}}"><view class="form-item-code"><view class="form-item code-item"><input class="code" placeholder="验证码" data-event-opts="{{[['input',[['bindCodeInput',['$event']]]]]}}" value="{{code}}" bindinput="__e"/><block wx:if="{{code.length>0}}"><image class="clear" id="clear-code" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><image class="code-img" src="https://dl.reg.163.com/cp?pd=yanxuan_web&pkid=SkeBZeG&random=1489903563234"></image></view></block><button class="login-btn" type="default" data-event-opts="{{[['tap',[['startLogin',['$event']]]]]}}" bindtap="__e">登录</button><view class="form-item-text"><navigator class="register" url="/pages/auth/register/register">注册账号</navigator></view></view></view>