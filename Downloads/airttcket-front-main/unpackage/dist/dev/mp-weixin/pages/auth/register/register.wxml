<view class="container"><view class="form-box"><view class="form-item"><input class="username" placeholder="用户名" auto-focus="{{true}}" data-event-opts="{{[['input',[['bindUsernameInput',['$event']]]]]}}" value="{{username}}" bindinput="__e"/><block wx:if="{{username.length>0}}"><image class="clear" id="clear-username" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><view class="form-item"><input class="password" password="{{true}}" placeholder="密码" data-event-opts="{{[['input',[['bindPasswordInput',['$event']]]]]}}" value="{{password}}" bindinput="__e"/><block wx:if="{{password.length>0}}"><image class="clear" id="clear-password" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><view class="form-item"><input class="password" password="{{true}}" placeholder="确认密码" data-event-opts="{{[['input',[['bindConfirmPasswordInput',['$event']]]]]}}" value="{{confirmPassword}}" bindinput="__e"/><block wx:if="{{confirmPassword.length>0}}"><image class="clear" id="clear-confirm-password" src="/static/static/images/clear_input.png" data-event-opts="{{[['tap',[['clearInput',['$event']]]]]}}" catchtap="__e"></image></block></view><button class="login-btn" type="default" data-event-opts="{{[['tap',[['startRegister',['$event']]]]]}}" bindtap="__e">注册</button></view></view>